<%= form_with(model: expense, url: group_expenses_path(@group.id), method: :post, local: true) do |form| %>
  <% if expense.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
        <% expense.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount, min: 1.0, step: 0.5 %>
  </div>

  <%# <%= form.text_field :user_id, value: current_user %>

  <div class="new-category-container">
    <%= form.label 'Select at least one category', style: "display: block" %>
    <div class="new-category-container-icon">
      <% @groups.each do |group| %>
        <div id="icon_<%= group[:name] %>" class="new-category-container-icon__card" onClick="selectIcon('<%= group[:icon] %>', '<%= group[:name] %>')">
          <p><i class="<%= group[:icon] %> fa-2xl new-category-container-icon__card__item"></i></p>
          <p><%= group[:name] %></p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="add-category">
    <%= form.submit 'Save', class:"splash-login add-category-button" %>
  </div>
<% end %>

<script>
  const icon = document.getElementsByClassName('new-category-container-icon__card');

  const clearActiveClass = () => {
    for(let i = 0 ; i < icon.length ; i += 1) {
      icon[i].classList.remove('icon-active');
    }
  }  

  const selectIcon = (icon, title) => {
    clearActiveClass();
    document.getElementById('group_icon').value = icon;
    document.getElementById(`icon_${title}`).classList.add('icon-active');
  }
</script>

