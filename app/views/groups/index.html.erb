<p style="color: green"><%= notice %></p>

<div id="groups" class="groups">
  <% if @groups.count.zero? %>
    <p class="center-message"><em>No groups available for the moment</em></p>
  <% else %>
    <% @groups.each do |group| %>
      <%= link_to group_expenses_path(group.id), class:"category-unit" do %>
        <%= render group %>
      <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to "Add category", new_group_path, class: "splash-login add-button" %>
